
@{
    ViewBag.Title = "AboutUs";
}

<style>
    .parallax {
        /* The image used */
        background-image: url('/images//chandelier.jpg');
        /* Set a specific height */
        height: 400px;
        /* Create the parallax scrolling effect */
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

<link href="~/Content/flex.css" rel="stylesheet" />

<div class="hero-wrap " style="background-image: url('/images/Parallax Charity2.jpeg');" data-stellar-background-ratio="0.5">

    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center " data-scrollax-parent="true">
            <div class="col-md-7 ftco-animate text-center" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">
                    <span class="mr-2">
                        @Html.ActionLink("Home", "Index", "Home")
                    </span> <span>About Us</span>
                </p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"></h1>
            </div>
        </div>
    </div>
</div>
<section class="ftco-section" style=" background: rgb(106,128,156);background: linear-gradient(0deg, rgba(106,128,156,1) 5%, rgba(28,38,43,0.9948354341736695) 100%);">
    <div class="container">
        <div class="row d-flex">
            <div class="col-md-6 pl-md-5 ftco-animate">
                <h2 class="mb-4 font-weight-bolder text-white">Welcome to Brothers in Alms</h2>
                <p class="text-white">Founded in 2019, we are a group of friends whose mission is to draw attention from more communitites and inform them about the programms and works of our partners throughout the globe.</p>
                <p class="text-white">We are assisting our partners' causes by providing fundraisers for their respective programs in the form of donations and subscriptions.</p>
                <p class="text-white">100% of the funds gathered are sent directly to our partners' donor pools in order to strengthen their emergency programs.</p>
                <p class="text-white font-italic font-weight-lighter">For People, for a change.</p>
            </div>
            <div class="col-md-6 d-flex ftco-animate">
                <div class="img img-about align-self-stretch" style="background-image: url('/images/FullLogoOrange.png'); width: 100%;">
                </div>
            </div>
        </div>
        <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"></h1>
    </div>
</section>

<div class="parallax container-fluid "></div>




